<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fsdgeniusacadamy.poisonplants.MainMenu"
    android:id="@+id/home">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Home"
                android:id="@+id/main_homeButton"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Search"
                android:id="@+id/main_searchButton"
                android:height="100dp"
                android:width="50dp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/tipsbutton"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Call"
                android:id="@+id/main_callButton"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="About"
                android:id="@+id/main_aboutButton"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/homebutton"
                android:layout_weight="1" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:padding="20dp"
            android:src="@drawable/oleander"
            android:layout_height="200dp" />

        <ImageView
            android:layout_width="match_parent"
            android:padding="20dp"
            android:id="@+id/img_poisonoak"
            android:src="@drawable/poisonoak"
            android:layout_height="200dp" />

        <ImageView
            android:layout_width="match_parent"
            android:padding="20dp"
            android:src="@drawable/stingingnettle"
            android:layout_height="200dp" />

        <ImageView
            android:layout_width="match_parent"
            android:padding="20dp"
            android:src="@drawable/lantana"
            android:layout_height="200dp" />

        <ImageView
            android:layout_width="match_parent"
            android:padding="20dp"
            android:src="@drawable/poodledogbrush"
            android:layout_height="200dp" />

        <ImageView
            android:layout_width="match_parent"
            android:padding="20dp"
            android:src="@drawable/silverlupine"
            android:layout_height="200dp" />

        <ImageView
            android:layout_width="match_parent"
            android:padding="20dp"
            android:src="@drawable/foxglove"
            android:layout_height="200dp" />

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/imageView3"
            android:src="@drawable/vine1"
            android:layout_below="@+id/homebutton"
            android:layout_alignParentStart="true"
            android:layout_height="200dp" />
    </LinearLayout>

</ScrollView>
